{
  "name": "@retts-packages/utilities-helper",
  "version": "1.0.0",
  "description": "Utilities Helper Functions - A collection of utility functions for modern JavaScript/TypeScript applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rettechnologys/retts-utilities-helper.git"
  },
  "bugs": {
    "url": "https://github.com/rettechnologys/retts-utilities-helper.git/issues"
  },
  "keywords": [
    "helper",
    "utilities",
    "typescript",
    "esm",
    "functions",
    "array",
    "string",
    "object",
    "date",
    "crypto"
  ],
  "author": "retts",
  "license": "ISC",
  "devDependencies": {
    "@types/html-to-text": "^9.0.4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@supercharge/strings": "2.0.0",
    "html-to-text": "9.0.5",
    "json2typescript": "^1.6.1",
    "juice": "11.0.0",
    "luxon": "^3.7.2",
    "moment": "^2.30.1",
    "secure-ls": "2.0.0"
  }
}
